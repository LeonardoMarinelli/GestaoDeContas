@model IEnumerable<GestaoDeContas.Models.ContaPagar>

<div class="container mt-4">
    <h2 class="text-center mb-4">Lista de Contas a Pagar</h2>

    <a href="/ContasPagar/Create" class="btn btn-success mb-3">Adicionar Nova Conta</a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Descrição</th>
            <th>Valor</th>
            <th>Data de Vencimento</th>
            <th>Status</th>
            <th>Categoria</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Descricao</td>
            <td>R$ @item.Valor.ToString("F2")</td>
            <td>@item.DataVencimento.ToShortDateString()</td>
            <td>
                <span class="badge @(item.Status ? "bg-success" : "bg-warning")">
                    @(item.Status ? "Paga" : "Pendente")
                </span>
            </td>
            <td>@item.Categoria</td>
            <td>
                <a href="/ContasPagar/Edit/@item.Id" class="btn btn-warning btn-sm">
                    <i class="bi bi-pencil-square"></i>Editar
                </a>
                <a href="/ContasPagar/Delete/@item.Id" class="btn btn-danger btn-sm">
                    <i class="bi bi-trash"></i>Excluir
                </a>
            </td>
        </tr>
        }
        </tbody>
    </table>
</div>