@model IEnumerable<GestaoDeContas.Models.Cartao>

<div class="container mt-4">
    <h2 class="text-center mb-4">Cartões de Crédito</h2>
    <a href="/Cartao/Create" class="btn btn-success mb-3">Adicionar Novo Cartão</a>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>Banco</th>
            <th>Final do Cartão</th>
            <th>Limite</th>
            <th>Total Gastos</th>
            <th>Limite Disponível</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var cartao in Model)
        {
            <tr>
                <td>@cartao.Banco</td>
                <td>@cartao.FinalCartao</td>
                <td>@cartao.LimiteCartao</td>
                <td>@cartao.TotalGastos</td>
                <td>@cartao.LimiteDisponivel</td>
                <td>
                    <a href="/Cartao/Edit/@cartao.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i>Editar
                    </a>
                    <a href="/Cartao/Delete/@cartao.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>Excluir
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>