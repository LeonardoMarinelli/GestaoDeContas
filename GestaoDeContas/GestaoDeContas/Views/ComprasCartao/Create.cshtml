@model GestaoDeContas.Models.CompraCartao

<h2>Registrar Nova Compra</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="DataCompra">Data da Compra</label>
        <input asp-for="DataCompra" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label for="Descricao">Descrição</label>
        <input asp-for="Descricao" class="form-control" />
    </div>

    <div class="form-group">
        <label>Categoria</label>
        <select asp-for="Categoria" class="form-control">
            <option value="">Selecione uma Categoria</option>
            <option value="Alimentação">Alimentação</option>
            <option value="Moradia">Moradia</option>
            <option value="Transporte">Transporte</option>
            <option value="Lazer">Lazer</option>
            <option value="Saúde">Saúde</option>
            <option value="Educação">Educação</option>
            <option value="Outros">Outros</option>
        </select>
        <span asp-validation-for="Categoria" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Valor</label>
        <input type="number" step="0.01" min="0" class="form-control" asp-for="Valor" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Parcelada">Compra Parcelada?</label>
        <input asp-for="Parcelada" type="checkbox" class="form-check-input" />
    </div>

    <script>
        document.getElementById("Parcelada").addEventListener("change", function() {
            const parcelasField = document.getElementById("NumeroParcelas");
            if (this.checked) {
                parcelasField.style.display = "block";
            } else {
                parcelasField.style.display = "none";
                parcelasField.value = 1;
            }
        });
    </script>

    <div class="form-group">
        <label>Numero de Parcelas</label>
        <input type="number" step="1" min="1" class="form-control" asp-for="NumeroParcelas" />
        <span asp-validation-for="NumeroParcelas" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CartaoId">Final do Cartão</label>
        <select asp-for="CartaoId" class="form-control" asp-items="@(new SelectList(ViewBag.Cartoes, "Id", "FinalCartao"))">
            <option value="">Selecione um Cartão</option>
        </select>
        <span asp-validation-for="CartaoId" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Salvar Compra</button>
</form>