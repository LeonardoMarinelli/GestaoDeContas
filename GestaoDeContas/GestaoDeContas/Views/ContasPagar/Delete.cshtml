@model GestaoDeContas.Models.ContaPagar

<h2>Excluir Conta</h2>

<h3>Tem certeza que deseja excluir esta conta?</h3>

<div>
    <h4>@Model.Descricao</h4>
    <p>Valor: @Model.Valor</p>
    <p>Data de Vencimento: @Model.DataVencimento.ToShortDateString()</p>
    <p>Status: @(Model.Status ? "Paga" : "Pendente")</p>
    <p>Categoria: @Model.Categoria</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a href="/Views/ContasPagar/Index.cshtml" class="btn btn-secondary">Cancelar</a>
</form>